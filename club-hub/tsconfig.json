{
  "compilerOptions": {
    "target": "ESNext",                 
    "module": "ESNext",                 
    "lib": ["DOM", "ESNext"],           
    "jsx": "react-jsx",                 
    "strict": true,                     
    "moduleResolution": "Node",         
    "esModuleInterop": true,            
    "skipLibCheck": true,               
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,                    
    "checkJs": false,                   
    "noEmit": true                      
  },
  "include": ["src"]                    
}
